pipeline {
    agent any
    environment {
    
        IMAGE_NAME = 'app'
    }
    stages {
        stage('build image') {
            steps {
                sh 'docker image prune -f'
                sh 'docker image ls'
                sh 'docker ps'
                sh 'echo ls ./s05/python-simple-app'
                sh 'docker build -t ${IMAGE_NAME}:latest .'
                sh 'echo "done!"'
            }
        }

        stage('run container') {
            steps {
                sh 'docker run -p 8000:5000 -d ${IMAGE_NAME}:latest'
            }
        }
        stage('test') {
                steps {
                    sh 'sleep 10 && curl -s localhost:8000'
                }
        }
    }
}
