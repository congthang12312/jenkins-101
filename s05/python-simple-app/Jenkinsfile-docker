pipeline {
    agent any
    environment {
    
        IMAGE_NAME = 'app'
    }
    stages {
        stage('build image') {
            steps {
                sh 'docker build -t ${IMAGE_NAME}:latest -f Dockerfile .'
            }
        }

        stage('run container') {
            steps {
                sh 'docker run -p 8000:80 -d ${IMAGE_NAME}:latest'
            }
        }
    }
}
